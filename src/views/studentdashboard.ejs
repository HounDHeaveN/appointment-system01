<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-bold text-center mb-8">Student Dashboard</h1>

        <!-- Appointment Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <!-- Card 1 -->
            <% if (students.length > 0) { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="px-6 py-4">
                    
                    <h2 class="text-xl font-bold mb-2">Appointment 1</h2>
                    <p class="text-gray-600">Teacher: John Doe</p>
                    <p class="text-gray-600">Subject: Mathematics</p>
                    <p class="text-gray-600">Date: 2024-03-15</p>
                    <p class="text-gray-600">Time: 10:00 AM</p>
                </div>
            </div>
            <% } else { %>

            <% } %>

            <!-- Card 2 -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="px-6 py-4">
                    <h2 class="text-xl font-bold mb-2">Appointment 2</h2>
                    <p class="text-gray-600">Teacher: Jane Smith</p>
                    <p class="text-gray-600">Subject: Science</p>
                    <p class="text-gray-600">Date: 2024-03-16</p>
                    <p class="text-gray-600">Time: 11:00 AM</p>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="px-6 py-4">
                    <h2 class="text-xl font-bold mb-2">Appointment 3</h2>
                    <p class="text-gray-600">Teacher: David Johnson</p>
                    <p class="text-gray-600">Subject: English</p>
                    <p class="text-gray-600">Date: 2024-03-17</p>
                    <p class="text-gray-600">Time: 2:00 PM</p>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
